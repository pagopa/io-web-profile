{
  "env": {
    "es6": true,
    "node": true
  },
  "ignorePatterns": [
    "node_modules",
    "generated",
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/__integrations__/*",
    "*.d.ts",
    "*.js"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "functional", "sonarjs"],
  "extends": [
    "next",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:sonarjs/recommended"
  ],
  "rules": {
    "functional/immutable-data": "error"
  }
}
